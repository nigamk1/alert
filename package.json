{
  "name": "nifty-alert-system",
  "version": "1.0.0",
  "description": "Self-hosted EMA breakdown alert system for Nifty 50 options",
  "main": "index.js",
  "scripts": {
    "start": "node start.js",
    "start:direct": "node index.js",
    "dev": "nodemon start.js",
    "dev:clean": "node cleanup-dev.js && npm run dev",
    "test": "node index.js --test",
    "status": "node index.js --status",
    "build": "node -e \"require('fs').mkdirSync('logs', {recursive: true}); console.log('✅ Build completed')\"",
    "build:windows": "build.bat",
    "build:unix": "chmod +x build.sh && ./build.sh",
    "cleanup": "node cleanup-dev.js",
    "postinstall": "node -e \"require('fs').mkdirSync('logs', {recursive: true}); console.log('📁 Logs directory created')\""
  },
  "keywords": [
    "nifty",
    "options",
    "trading",
    "alerts",
    "whatsapp",
    "ema"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "puppeteer": "^18.2.1",
    "qrcode": "^1.5.3",
    "technicalindicators": "^3.1.0",
    "whatsapp-web.js": "^1.23.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
